---
layout: layouts/base.njk
---

<div class="mt-10 max-w-2xl mx-auto px-6 xl:px-0">
  <h1 class="text-5xl font-bold leading-snug font-extended">{{ title }}</h1>
  <h2 class="mt-4 text-2xl max-w-lg">
    All the latest JOMO news, philosophical topics, design, science, research &
    more.
  </h2>

  <ul class="mt-16 space-y-10">
    {% for post in collections.blog |Â reverse %}
    <li>
      <article class="sm:flex">
        <p class="text-xs sm:text-sm min-w-[25%] opacity-60">
          Published on
          <br class="hidden sm:block" />
          <time datetime="{{ post.date | isoDate }}">{{
            post.date | postDate
          }}</time>
        </p>

        <div class="mt-2 sm:mt-0 flex-1">
          <a href="{{ post.url }}" class="text-2xl font-bold underline">
            <h1>{{ post.data.title }}</h1>
          </a>
          <p class="mt-3 opacity-60">
            {{ post.data.description }}
          </p>
        </div>
      </article>
    </li>
    {% endfor %}
  </ul>

  {{ content | safe }}
</div>
