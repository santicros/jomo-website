  "main": "index.js",
  "scripts": {
    "clean": "rimraf dist .cache",
    "dev": "npm-run-all --parallel dev:*",
    "dev:eleventy": "npx eleventy --serve",
    "dev:style": "npx tailwindcss -i ./src/_static/css/tailwind.css -o ./dist/style.css -w",
    "build": "npm run clean && npm run build:style && npm run build:eleventy",
    "build:eleventy": "NODE_ENV=production npx eleventy",
    "build:style": "NODE_ENV=production npx tailwindcss -i ./src/_static/css/tailwind.css -o ./.cache/processed.css",
    "debug": "DEBUG=* eleventy",
    "format": "prettier --write './**/*.{js,css,md,json,html}'",
    "lint": "eslint --fix ."
  },
  "devDependencies": {
    "@11ty/eleventy": "^0.12.1",
    "autoprefixer": "^10.2.6",
    "csso": "^4.2.0",
    "eslint": "^7.28.0",
    "eslint-plugin-import": "^2.23.4",
    "html-minifier": "^4.0.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.3.5",
    "prettier": "^2.3.1",
    "purgecss": "^4.0.3",
    "rimraf": "^3.0.2",
    "tailwindcss": "^2.2.0"
  },
  "dependencies": {
    "@tailwindcss/typography": "^0.4.1"
  }
}
